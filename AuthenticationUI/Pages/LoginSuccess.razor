@page "/loginsuccess"
@inject NavigationManager Navigation
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<PageTitle>Login Successful</PageTitle>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h4>Login Successful</h4>
                </div>
                <div class="card-body text-center">
                    <i class="bi bi-check-circle-fill text-success display-3"></i>
                    <p class="mt-4">You have successfully logged in!</p>


                    <button class="btn btn-secondary w-100 mt-2" @onclick="GoToHome">Go to Home</button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {

    private void GoToHome()
    {
        Navigation.NavigateTo("/"); // Redirect to homepage
    }
}